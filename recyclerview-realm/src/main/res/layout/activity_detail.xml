<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edgon.recyclerview_realm.activitys.DetailActivity">

    <ImageView
        android:id="@+id/img_detail_activity"
        android:layout_width="76dp"
        android:layout_height="76dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintVertical_bias="0.064"/>

    <TextView
        android:id="@+id/txt_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="24sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_detail_activity"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintTop_toTopOf="@+id/img_detail_activity"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/txt_phone_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefono"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_name_detail"
        app:layout_constraintLeft_toRightOf="@+id/img_detail_activity"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.056"/>

    <TextView
        android:id="@+id/txt_email_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="correo@example.com"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_detail_activity"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintBottom_toBottomOf="@+id/img_detail_activity"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_phone_detail"
        app:layout_constraintVertical_bias="1.0"/>
</android.support.constraint.ConstraintLayout>
