<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.edgon.calculadora.MainActivity">

    <TextView

        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:paddingRight="20dp"
        android:gravity="center|end"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/txt_pantalla"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text=""
        android:padding="20dp"
        android:gravity="right|bottom"
        android:paddingBottom="10dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_siete"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="7"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    />

                <Button
                    android:id="@+id/btn_ocho"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="8"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    />
                <Button
                    android:id="@+id/btn_nueve"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="9"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_cuatro"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="4"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    />

                <Button
                    android:id="@+id/btn_cinco"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="5"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    />
                <Button
                    android:id="@+id/btn_seis"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="6"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_uno"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="1"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    />

                <Button
                    android:id="@+id/btn_dos"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="2"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    />
                <Button
                    android:id="@+id/btn_tres"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="3"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_punto"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="."
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"
                    />

                <Button
                    android:id="@+id/btn_cero"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"

                    />
                <Button
                    android:id="@+id/btn_igual"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="="
                    android:background="@android:color/darker_gray"
                    android:textColor="@android:color/black"

                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_del"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="del"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                />
            <Button
                android:id="@+id/btn_div"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="/"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                />
            <Button
                android:id="@+id/btn_mult"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="x"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                />
            <Button
                android:id="@+id/btn_menos"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="-"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                />
            <Button
                android:id="@+id/btn_mas"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="+"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/black"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

